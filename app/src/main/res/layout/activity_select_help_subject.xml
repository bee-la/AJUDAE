<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.app.armetech.ajudae.user.gui.SelectHelpSubjectActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/round_header"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="18dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="QUERO AJUDAR" />

    <TextView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:padding="5dp"
        android:id="@+id/textView7"
        android:textColor="@color/darkBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textAlignment="center"
        android:text="Busque e selecione as
cadeiras que vocÃª pode ajudar!" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView11"
        android:layout_below="@id/textView7"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="ESCOLHA UMA CADEIRA" />

    <EditText
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:hint="Digite o nome da cadeira"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/lightGray"
        android:textColorLink="@color/colorPrimary"
        android:background="@drawable/round_input_background"
        android:layout_below="@id/textView11"
        android:id="@+id/editText001" />

    <Button
        android:id="@+id/btnAddSubject"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText001"
        android:layout_alignRight="@+id/editText001"
        android:layout_alignTop="@+id/editText001"
        android:background="@drawable/round_button_red"
        android:onClick="pressButton"
        android:text="ADD CADEIRA"
        android:textColor="#fff"
        android:theme="@style/AppTheme.WhiteRipple" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView10"
        android:paddingLeft="10dp"
        android:layout_below="@id/editText001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="CADEIRAS SELECIONADAS" />

    <GridLayout
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_above="@+id/btnEnter"
        android:layout_height="700dp"
        android:layout_gravity="center"

        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        tools:context="com.app.armetech.ajudae.user.gui.SelectHelpSubjectActivity"
        android:id="@+id/gridLayout">

    </GridLayout>

    <Button
        android:id="@+id/btnEnter"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/round_button_red"
        android:text="FINALIZAR"
        android:onClick="goToNewsFeedScreen"
        android:textColor="#fff"
        android:theme="@style/AppTheme.WhiteRipple" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/gridLayout"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignTop="@+id/gridLayout"></android.support.v7.widget.RecyclerView>


</RelativeLayout>
