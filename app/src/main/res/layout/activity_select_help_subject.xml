<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.app.armetech.ajudae.user.gui.SelectHelpSubjectActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/round_header"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="QUERO AJUDAR" />

    <TextView
        android:padding="5dp"
        android:id="@+id/textView7"
        android:textColor="@color/darkBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textAlignment="center"
        android:text="Busque e selecione as
cadeiras que vocÃª pode ajudar!" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="DEPARTAMENTO"
        android:textColor="@color/colorPrimary" />

    <Spinner
        android:id="@+id/simpleSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="19dp" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/simpleSpinner"
        android:layout_alignStart="@+id/simpleSpinner"
        android:layout_below="@+id/simpleSpinner"
        android:layout_marginTop="31dp"
        android:text="CADEIRAS" />

    <Spinner
        android:id="@+id/subjectSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/simpleSpinner"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignRight="@+id/simpleSpinner"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="32dp" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subjectSpinner"
        android:layout_alignStart="@+id/subjectSpinner"
        android:layout_below="@+id/subjectSpinner"
        android:layout_marginTop="35dp"
        android:text="CADEIRAS SELECIONADAS" />

    <Button
        android:id="@+id/btnEnter"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/round_button_red"
        android:text="FINALIZAR"
        android:onClick="goToNewsFeedScreen"
        android:textColor="#fff"
        android:theme="@style/AppTheme.WhiteRipple" />


</RelativeLayout>
