<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.armetech.ajudae.user.gui.LoginAvaActivity"
    android:background="#fff">

    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/headerloginava" />

    <Button
        android:id="@+id/btnContinuar"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/round_button_red"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="loginAVA"
        android:text="CONTINUAR"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header"
        android:layout_marginTop="19dp"
        app:srcCompat="@drawable/loginava" />

    <EditText
        android:id="@+id/edtTextAvaLogin"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="37dp"
        android:layout_toEndOf="@+id/icPassword"
        android:layout_toRightOf="@+id/icPassword"
        android:backgroundTint="@color/lightGray"
        android:ems="10"
        android:hint="Login do AVA"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/lightGray" />

    <EditText
        android:id="@+id/edtTextAvaPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtTextAvaLogin"
        android:layout_alignLeft="@+id/edtTextAvaLogin"
        android:layout_alignRight="@+id/edtTextAvaLogin"
        android:layout_alignStart="@+id/edtTextAvaLogin"
        android:layout_below="@+id/edtTextAvaLogin"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/lightGray"
        android:ems="10"
        android:hint="Senha do AVA"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/lightGray" />

    <ImageView
        android:id="@+id/icEmail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/edtTextAvaPass"
        android:layout_alignLeft="@+id/btnContinuar"
        android:layout_alignStart="@+id/btnContinuar"
        app:srcCompat="@drawable/ic_email" />

    <ImageView
        android:id="@+id/icPassword"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/edtTextAvaPass"
        android:layout_alignLeft="@+id/icEmail"
        android:layout_alignStart="@+id/icEmail"
        android:layout_marginBottom="7dp"
        app:srcCompat="@drawable/ic_password" />


    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnContinuar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="name"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTextAvaPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textColor="@color/colorPrimary"
        android:text="Conecte-se para obter suas cadeiras!" />


</RelativeLayout>
