<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="com.app.armetech.ajudae.ScheduleAvaScreen">

    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="106dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/headerscheduleava"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/txtViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Olá, Ericka Pricila da Silva"
        android:textColor="@color/darkBlue"/>

    <TextView
        android:textAlignment="center"
        android:textColor="@color/darkBlue"
        android:id="@+id/txtViewCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewNome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="BACHARELADO EM SISTEMAS DE INFORMAÇÃO" />

    <android.support.v7.widget.CardView
        android:id="@+id/bankcardId"
        android:layout_width="160dp"
        android:layout_height="190dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="16dp"
        android:clickable="true"
        app:cardBackgroundColor="#fff"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/round_button_red"
                android:padding="0dp"
                android:src="@drawable/redroundmortar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TURMA: SI 1"
                android:textColor="@color/darkBlue"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Modelagem de Programação Orientada a Objetos"
                android:textColor="@color/darkBlue" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:id="@+id/btnContinuar"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:textColor="#fff"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/round_button_red"
        android:text="CONTINUAR" />
</RelativeLayout>
